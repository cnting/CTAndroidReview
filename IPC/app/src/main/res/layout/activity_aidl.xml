<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="调用服务端耗时操作" />

    <Button
        android:id="@+id/testInBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="testIn"
        android:text="testIn" />

    <Button
        android:id="@+id/testOutBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="testOut"
        android:text="testOut" />

    <Button
        android:id="@+id/testInOutBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="testInOut"
        android:text="testInOut" />

    <Button
        android:id="@+id/testOnewayBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="testOneway"
        android:text="test oneway" />

    <Button
        android:id="@+id/testNoOnewayBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="testNoOneway"
        android:text="test no oneway" />

</LinearLayout>